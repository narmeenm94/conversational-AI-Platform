# ── Server ──
SERVER_HOST=0.0.0.0
SERVER_PORT=8765

# ── Speech-to-Text (Faster Whisper) ──
STT_MODEL=large-v3
STT_LANGUAGE=en
STT_DEVICE=cuda
STT_COMPUTE_TYPE=float16

# ── LLM (Ollama) ──
LLM_MODEL=llama3.1:8b
LLM_BASE_URL=http://localhost:11434
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=150

# ── Text-to-Speech (Orpheus) ──
# Model: "medium-3b" (best quality, ~6GB VRAM) or a HuggingFace model path
TTS_MODEL=medium-3b
TTS_VOICE=tara
TTS_SAMPLE_RATE=24000

# ── RAG / Knowledge Base ──
RAG_DB_PATH=./knowledge/db
RAG_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
RAG_TOP_K=3
RAG_COLLECTION_NAME=training_docs

# ── Character ──
CHARACTER_NAME=Alex
CHARACTER_DESCRIPTION=a friendly and patient training instructor

# ── Emotion Analysis (optional) ──
EMOTION_ENABLED=false
EMOTION_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
